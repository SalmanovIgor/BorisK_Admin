<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="font-size:14px;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#434853">
        <div class="container">
            <div class="navbar-header" style="width:100%">
                @Html.ActionLink("Book Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav" style="text-align:right; float:right;">
                    @if (Session["isLogin"] != null) {
                        <li>@Html.ActionLink("LogOut", "LogOut", "Home")</li>
                    }
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
